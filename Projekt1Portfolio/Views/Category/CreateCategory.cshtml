@model Projekt1Portfolio.Models.Tbl_Category

@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Neue Kategorieneingabe</h2>

<form method="post">
    <label>Kategoriename</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <label>Kategoriezustand</label>
    @Html.TextBoxFor(x => x.CategoryStatus, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Hinzufügen</button>
</form>

@*@model List<Projekt1Portfolio.Models.Tbl_Skill>*@
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Projekt1Portfolio.Models.Tbl_Skill>

@{
    ViewBag.Title = "SkillListe";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Liste meiner Fähigkeiten</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Titel</th>
        <th>Wert</th>
        <th>Löschen</th>
        <th>Aktualisieren</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillId</td>
            <td>@item.Title</td>
            <td>@item.Value</td>
            <td> <a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Löschen</a></td>
            <td> <a href="#" class="btn btn-success">Aktualisieren</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("SkillListe", new { page }), new PagedListRenderOptions
{
    LiElementClasses = new List<string>
    { "page-link"}
})
<a href="/Skill/CreateSkill/" class="btn btn-info">Neue Fähigkeit hinzufügen</a>


@model List<Projekt1Portfolio.Models.SocialMedia>

<div class="container-fluid" id="pigraAbout">
    <div class="container">
        <div class="row g-0">
            <div class="col-12 col-lg-3">
                <div class="about-header bg-dark h-100 pt-6 pe-6 pb-6">
                    <div class="text-start d-flex flex-column justify-content-center wow fadeInUp" data-wow-delay="0.1s">
                        <p class="text-white sub-title">Über mich</p>
                        <h1 class="display-5 text-white mb-0 font-weight-bold">Informatiker</h1>

                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-9">
                <div class="about-content h-100 pt-6 ps-6 pb-6">
                    <div class="row g-5">
                        <div class="col-xl-5">
                            <div class="about-img bg-light p-4 wow fadeInUp" data-wow-delay="0.1s">
                                <img src="@ViewBag.image" class="img-fluid w-100" alt="Image">
                                <div class="sosial-icon">
                                    @foreach (var item in Model)
                                    {
                                        <a href="@item.SocialMediaUrl" target="_blank" class="text-decoration-none me-2"><i class="@item.Icon"></i></a>
                                    }



                                </div>
                            </div>
                        </div>
                        <div class="col-xl-7 wow fadeInUp" data-wow-delay="0.3s">
                            <h4 class="mb-4">@ViewBag.title</h4>
                            <p class="mb-4">
                                @ViewBag.description 
                            </p>
                            
                            <a href="~/Lebeslauf/KereciYasin.pdf" class="btn btn-success py-2 px-4 rounded-pill"> <i class="fas fa-file-download me-2"></i>Lebenslauf Herunterladen</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model List<Projekt1Portfolio.Models.Tbl_Profile>
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Admin/Index.cshtml";
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<h2 class="text-center mt-4">Über mich</h2>

<div class="container d-flex justify-content-center mt-5">
    <div class="col-md-8">
        @foreach (var item in Model)
        {
            <div class="card mb-4 shadow-lg" style="border-radius: 15px;">
                <div class="card-body p-4" style="background-color: #f4f4f9; border-radius: 15px;">
                    <div class="text-center mb-4">
                        <div style="width: 80px; height: 80px; background-color: #007bff; border-radius: 50%; display: inline-flex; justify-content: center; align-items: center;">
                            <i class="fas fa-user fa-2x text-white"></i>
                        </div>
                    </div>
                    <h3 class="card-title text-center mb-2" style="color: #333;">@item.Title</h3>
                    <p class="text-muted text-center mb-4">@item.Description</p>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="fas fa-map-marker-alt text-primary"></i>
                            <strong> Address: </strong> @item.Address
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-envelope text-danger"></i>
                            <strong> Email: </strong> @item.Email
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-phone text-success"></i>
                            <strong> Phone: </strong> @item.PhoneNumber
                        </li>
                        <li>
                            <i class="fab fa-github text-dark"></i>
                            <strong> Github: </strong> <a href="@item.Github" target="_blank">@item.Github</a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
